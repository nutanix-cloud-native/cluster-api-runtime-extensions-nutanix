apiVersion: kustomize.config.k8s.io/v1beta1
kind: Kustomization

metadata:
  name: cilium

sortOptions:
  order: fifo

helmCharts:
- name: cilium
  repo: https://helm.cilium.io/
  releaseName: cilium
  version: ${CILIUM_VERSION}
  valuesFile: values-template.yaml
  # we need to do this because hubble is disabled for CRS.
  valuesInline:
    hubble:
      enabled: false
  includeCRDs: true
  skipTests: true
  namespace: kube-system
  kubeVersion: ${E2E_DEFAULT_KUBERNETES_VERSION}

namespace: kube-system
