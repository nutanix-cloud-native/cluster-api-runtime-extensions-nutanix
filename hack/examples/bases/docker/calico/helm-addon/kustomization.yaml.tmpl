apiVersion: kustomize.config.k8s.io/v1beta1
kind: Kustomization

resources:
- https://github.com/kubernetes-sigs/cluster-api/releases/download/${CLUSTERCTL_VERSION}/cluster-template-development.yaml

patches:
- target:
    group: cluster.x-k8s.io
    kind: Cluster
  patch: |-
    - op: "add"
      path: "/metadata/name"
      value: "quick-start-helm-addon-calico"
    - op: "add"
      path: "/spec/topology/variables"
      value:
        - name: "clusterConfig"
          value:
            addons:
              cni:
                provider: Calico
                strategy: HelmAddon
    - op: "add"
      path: "/spec/topology/variables/0/value/addons/nfd"
      value:
        strategy: HelmAddon
